{
  "name": "onscreenness",
  "version": "1.5.0",
  "description": "Supply visibility classes and data to selected elements on your webpage.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "scripts": {
    "build:src": "clear-folder dist && rollup --config",
    "build:docs": "documentation build src/*.js --format md > API.md",
    "build": "npm run build:src && npm run build:docs",
    "start": "jest --onlyChanged --watchAll & rollup --config --watch & node ./lib/start-server.js",
    "coverage": "clear-folder .nyc_output coverage test/screenshots && jest --coverage",
    "test": "clear-folder test/screenshots && jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ovanderzee/onscreenness.git"
  },
  "keywords": [
    "intersection",
    "offscreen",
    "onscreen",
    "overscreen",
    "crossscreen",
    "screen presence",
    "viewport",
    "visibility",
    "front-end"
  ],
  "author": "Onno van der Zee",
  "license": "ISC",
  "dependencies": {
    "document-staging": "^0.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/runtime": "^7.4.5",
    "clear-folder": "^1.1.2",
    "core-js": "^3.1.4",
    "coveralls": "^3.0.4",
    "documentation": "^11.0.1",
    "jest": "^24.8.0",
    "puppeteer": "^1.18.0",
    "rollup": "^1.15.6",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.3",
    "rollup-plugin-terser": "^5.0.0",
    "static-server": "^2.2.1"
  }
}
